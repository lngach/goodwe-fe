<!doctype html>
<html class="no-js"  lang="en">

	<head>
    <% include ../shared/user/styles.ejs %>
	</head>

	<body>
		<% include ../shared/user/navigation.ejs %>
	
		<section class="news">
			<div class="container">
				 <div class="row row-custom mt-10">
					 	<% news.forEach(item => { %> 
						<div class="col-sm-4 p-5">
							 <a href="/tin-tuc/<%= item.slug %>">
									<div class="news-item">
										 <img src="<%= item.image %>" alt="<%= item.slug %>">
										 <div class="news-desc">
												<h2 class="news-title"><%= item.title %></h2>
												<p class="news-detail">
													<%- item.content.slice(0, 250) %>...
												</p>
							 <a href="#">
							 <div class="btn-viewDetail">
							 <span>View Details</span>
							 </div>
							 </a>
							 </div>
							 </div>
							 </a>
						</div>
						<% }) %>
				 </div>
			</div>
	 </section>
		<% include ../shared/user/footer.ejs %>
		<% include ../shared/user/scripts.ejs %>
	</body>
</html>