		<section class="tin-tuc">
			<div class="container-fluid p-0">
				 <div class="row row-custom">
					 	<% news.forEach(item => { %> 
						<div class="col-sm-4 p-5">
							 <a href="tin-tuc/<%= item.slug %>">
									<div class="tin-tuc-item text-left">
										 <img src="<%= item.image %>" alt="<%= item.slug %>">
										 <div class="tin-tuc-desc">
												<h2 class="tin-tuc-title"><%= item.title %></h2>
												<p class="tin-tuc-detail">
													<%- item.content.slice(0, 250) %>...
												</p>
							 <a href="tin-tuc/<%= item.slug %>">
							 <div class="btn-viewDetail">
							 <span>View Details</span>
							 </div>
							 </a>
							 </div>
							 </div>
							 </a>
						</div>
						<% }) %>
				 </div>
			</div>
	 </section>
		<% include ../shared/user/footer.ejs %>
		<% include ../shared/user/scripts.ejs %>
	</body>
